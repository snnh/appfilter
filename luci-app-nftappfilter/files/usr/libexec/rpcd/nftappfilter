#!/bin/sh
# SPDX-License-Identifier: GPL-3.0-or-later

# This is a simple RPC service for luci-app-nftappfilter

# RPC methods go here
# For example, a method to reload the nftables rules:
reload_rules() {
    /usr/sbin/nftappfilter reload
    echo "Rules reloaded"
}

# Main script
case "$1" in
    reload_rules)
        reload_rules
        ;;
    *)
        echo "Usage: $0 {reload_rules}"
        exit 1
        ;;
esac